<!-- Views/AboutPage.xaml -->
<husk:Page
    x:Class="FMMS.Views.AboutPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FMMS.ViewModels"
    Padding="0"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:DataType="vm:AboutViewModel"
    IsBackButtonVisible="False"
    mc:Ignorable="d">

	<ScrollViewer>
		<StackPanel Margin="24" Spacing="24">

			<!-- Заголовок -->
			<StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
				<Border
                    Padding="12"
                    Background="{DynamicResource ControlAccentBrush}"
                    CornerRadius="8">
					<fi:SymbolIcon
                        FontSize="24"
                        Symbol="Info" />
				</Border>
				<TextBlock
                    VerticalAlignment="Center"
                    FontSize="{StaticResource LargeFontSize}"
                    FontWeight="{StaticResource ControlStrongFontWeight}"
                    Text="О программе" />
			</StackPanel>

			<!-- Карточка Информация о приложении -->
			<husk:Card>
				<StackPanel Margin="16" Spacing="16">
					<StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
						<Border CornerRadius="8">
							<fi:SymbolIcon
                                Margin="10"
							FontSize="20"
							Foreground="{DynamicResource ControlAccentBrush}"
							Symbol="Apps" />
						</Border>
						<StackPanel VerticalAlignment="Center">
							<TextBlock
                                FontSize="{StaticResource MediumFontSize}"
                                FontWeight="{StaticResource ControlSemiBoldFontWeight}"
							Text="Информация о приложении" />
							<TextBlock
                                FontSize="{StaticResource SmallFontSize}"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
							Text="Основные сведения о программе" />
						</StackPanel>
					</StackPanel>

					<Grid
                        Margin="0,8,0,0"
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="16"
                        RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                        RowSpacing="12">
						<TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
						Text="Название:" />
						<TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
						Text="{Binding AppName}" />

						<TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Версия:" />
						<TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding AppVersion}" />

						<TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Лицензия:" />
						<TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding License}" />

						<TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Статус:" />
						<TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding AppStatus}" />

						<TextBlock
						   Grid.Row="4"
						   Grid.Column="0"
						   FontWeight="SemiBold"
						   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
						   Text="Описание:" />
						<TextBlock
                            Grid.Row="4"
                            Grid.Column="1"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding AppDescription}" />
					</Grid>

					<StackPanel
                        Margin="0,8,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="8">
						<Button
                            Classes="Primary"
                            Command="{Binding CheckForUpdatesCommand}"
                            Content="Проверить обновления"
                            Theme="{StaticResource OutlineButtonTheme}" />
					</StackPanel>
				</StackPanel>
			</husk:Card>

			<!-- Карточка О Разработчике -->
			<husk:Card>
				<StackPanel Margin="16" Spacing="16">
					<StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
						<Border CornerRadius="8">
							<fi:SymbolIcon
                                Margin="10"
                                FontSize="20"
                                Foreground="{DynamicResource ControlAccentBrush}"
                                Symbol="Person" />
						</Border>
						<StackPanel VerticalAlignment="Center">
							<TextBlock
                                FontSize="{StaticResource MediumFontSize}"
                                FontWeight="{StaticResource ControlSemiBoldFontWeight}"
                                Text="О разработчике" />
							<TextBlock
                                FontSize="{StaticResource SmallFontSize}"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="Информация о создателе программы" />
						</StackPanel>
					</StackPanel>

					<Grid
                        Margin="0,8,0,0"
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="16"
                        RowDefinitions="Auto,Auto,Auto,Auto"
                        RowSpacing="12">
						<TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Разработчик:" />
						<TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding DeveloperName}" />

						<TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Email:" />
						<TextBlock Grid.Row="1" Grid.Column="1">
							<HyperlinkButton Command="{Binding OpenEmailCommand}">
								<TextBlock Text="{Binding DeveloperContact}" />
							</HyperlinkButton>
						</TextBlock>

						<TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="GitHub:" />
						<TextBlock Grid.Row="2" Grid.Column="1">
							<HyperlinkButton Command="{Binding OpenGitHubCommand}">
								<TextBlock Text="{Binding GitHubUrl}" />
							</HyperlinkButton>
						</TextBlock>
					</Grid>

					<StackPanel
                        Margin="0,16,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        Spacing="12">
						<Button
                            Padding="12,6"
                            Classes="Primary"
                            Command="{Binding OpenGitHubCommand}"
                            Theme="{StaticResource OutlineButtonTheme}">
							<StackPanel Orientation="Horizontal" Spacing="6">
								<fi:SymbolIcon Symbol="Link" />
								<TextBlock Text="GitHub" />
							</StackPanel>
						</Button>
						<Button
                            Padding="12,6"
                            Classes="Primary"
                            Command="{Binding OpenEmailCommand}"
                            Theme="{StaticResource OutlineButtonTheme}">
							<StackPanel Orientation="Horizontal" Spacing="6">
								<fi:SymbolIcon Symbol="Mail" />
								<TextBlock Text="Написать Email" />
							</StackPanel>
						</Button>
					</StackPanel>
				</StackPanel>
			</husk:Card>

			<!-- Карточка Системная информация -->
			<husk:Card>
				<StackPanel Margin="16" Spacing="16">
					<StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
						<Border CornerRadius="8">
							<fi:SymbolIcon
                                Margin="10"
                                FontSize="20"
                                Foreground="{DynamicResource ControlAccentBrush}"
                                Symbol="System" />
						</Border>
						<StackPanel VerticalAlignment="Center">
							<TextBlock
                                FontSize="{StaticResource MediumFontSize}"
                                FontWeight="{StaticResource ControlSemiBoldFontWeight}"
                                Text="Системная информация" />
							<TextBlock
                                FontSize="{StaticResource SmallFontSize}"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="Технические характеристики системы" />
						</StackPanel>
					</StackPanel>

					<Grid
                        Margin="0,8,0,0"
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="16"
                        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                        RowSpacing="12">
						<TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Операционная система:" />
						<TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding OsInfo}" />

						<TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Архитектура:" />
						<TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding Architecture}" />

						<TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Версия .NET:" />
						<TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding DotNetVersion}" />

						<TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="CLR версия:" />
						<TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding ClrVersion}" />

						<TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Количество ядер:" />
						<TextBlock
                            Grid.Row="4"
                            Grid.Column="1"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding ProcessorCount}" />

						<TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Разрядность процессора:" />
						<TextBlock
                            Grid.Row="5"
                            Grid.Column="1"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding ProcessorArchitecture}" />
					</Grid>

					<StackPanel
                        Margin="0,16,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        Spacing="12">
						<Button
                            Padding="12,6"
                            Classes="Primary"
                            Command="{Binding RefreshSystemInfoCommand}"
                            Theme="{StaticResource OutlineButtonTheme}">
							<StackPanel Orientation="Horizontal" Spacing="6">
								<fi:SymbolIcon Symbol="ArrowClockwise" />
								<TextBlock Text="Обновить" />
							</StackPanel>
						</Button>
					</StackPanel>
				</StackPanel>
			</husk:Card>

			<!-- Карточка Поддержка -->
			<husk:Card>
				<StackPanel Margin="16" Spacing="16">
					<StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
						<Border CornerRadius="8">
							<fi:SymbolIcon
                                Margin="10"
                                FontSize="20"
                                Foreground="{DynamicResource ControlAccentBrush}"
                                Symbol="Heart" />
						</Border>
						<StackPanel VerticalAlignment="Center">
							<TextBlock
                                FontSize="{StaticResource MediumFontSize}"
                                FontWeight="{StaticResource ControlSemiBoldFontWeight}"
                                Text="Поддержка и помощь" />
							<TextBlock
                                FontSize="{StaticResource SmallFontSize}"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="Получите помощь и поддержку" />
						</StackPanel>
					</StackPanel>

					<Grid
                        Margin="0,8,0,0"
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="16"
                        RowDefinitions="Auto,Auto,Auto"
                        RowSpacing="12">

						<TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Сообщить об ошибке:" />
						<TextBlock Grid.Row="0" Grid.Column="1">
							<HyperlinkButton Command="{Binding ReportBugCommand}">
								<TextBlock Text="Создать issue на GitHub" />
							</HyperlinkButton>
						</TextBlock>

						<TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Предложить функцию:" />
						<TextBlock Grid.Row="1" Grid.Column="1">
							<HyperlinkButton Command="{Binding SuggestFeatureCommand}">
								<!-- Добавлено поле в ViewModel -->
								<TextBlock Text="Открыть обсуждение на GitHub" />
							</HyperlinkButton>
						</TextBlock>

						<TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Документация:" />
						<TextBlock Grid.Row="2" Grid.Column="1">
							<HyperlinkButton Command="{Binding OpenDocumentationCommand}">
								<!-- Добавлено поле в ViewModel -->
								<TextBlock Text="Читать документацию" />
							</HyperlinkButton>
						</TextBlock>
					</Grid>
				</StackPanel>
			</husk:Card>

		</StackPanel>
	</ScrollViewer>

</husk:Page>